{
  "name": "tuvero",
  "version": "1.6.0-dev-2",
  "description": "Tuvero Tournament Software Library",
  "main": "./dist/index",
  "author": {
    "name": "Erik E. Lorenz"
  },
  "scripts": {
    "build": "tsc",
    "build-watch": "tsc -w",
    "bundle": "webpack",
    "bundle-watch": "webpack --watch",
    "lint": "tslint --config tslint.json --project tsconfig.json",
    "lint-fix": "tslint --config tslint.json --project tsconfig.json --fix",
    "test": "mocha dist/**/*.spec.js",
    "test-watch": "mocha dist/**/*.spec.js --watch",
    "test-src": "mocha -r node_modules/ts-node/register src/**/*.spec.ts",
    "coverage": "nyc npm test",
    "doc": "typedoc --out doc/ src/"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "lodash": "4.17.5",
    "mathjs": "3.20.1",
    "mersenne": "0.0.4"
  },
  "devDependencies": {
    "@types/lodash": "4.14.104",
    "@types/mathjs": "0.0.37",
    "@types/chai": "4.1.2",
    "@types/mocha": "2.2.48",
    "chai": "4.1.2",
    "mocha": "5.0.1",
    "nyc": "11.4.1",
    "ts-node": "4.1.0",
    "tslint": "5.9.1",
    "typedoc": "^0.10.0",
    "typescript": "2.7.2",
    "uglifyjs-webpack-plugin": "1.2.0",
    "webpack": "3.11.0"
  },
  "nyc": {
    "all": true,
    "include": "dist/**/*.js",
    "exclude": [
      "dist/**/*.spec.js",
      "dist/*.js"
    ],
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "check-coverage": true
  },
  "typedoc": {
    "exclude": "src/**/*.spec.ts",
    "mode": "modules"
  }
}
